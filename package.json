{
  "name": "ts-gas-advanced-monorepo",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "test": "echo 'Test: no test specified'",
    "build": "npm run build:client && npm run build:server && npm run build:post && clasp push && npm run build:pre",
    "build:pre": "ls .gas/ | grep -wv json | awk '$0=\".gas/\"$0' | xargs rm -rf",
    "build:post": "rm -rf .parcel-cache",
    "build:client": "parcel build --no-optimize --no-cache --no-source-maps --dist-dir .gas src/client/*.html",
    "build:server": "ls src/ | grep -wv client | awk '{ system(\"cp -r src/\" $0 \" .gas/src\") }' && cp -r config .gas",
    "dev:start": "parcel serve --no-cache --no-source-maps --dist-dir .gas src/client/*.html",
    "dev:clear": "npm run build:pre && npm run build:post",
    "dev:watch": "onchange \"**/*\" -- npm run dev:onchange",
    "dev:onchange": "npm run pretty:start",
    "prepare": "husky install",
    "pretty:lint": "eslint --ignore-path .eslintignore --ext .js,.ts,.jsx,.tsx,.css,.scss . --fix",
    "pretty:start": "npx prettier --write .",
    "pretty:quick": "pretty-quick --ignore-path .prettierignore --config .prettierrc.json --pattern '**/*.{ts,js,.css,.scss,.html}'",
    "pretty:staged": "npm run pretty:quick -- --staged"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google/clasp": "^2.4.1"
  },
  "devDependencies": {
    "@types/google-apps-script": "^1.0.41",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "eslint": "^8.5.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "onchange": "^7.1.0",
    "parcel": "^2.0.1",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "typescript": "^4.5.4"
  }
}
